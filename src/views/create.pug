extends common.pug

block content
    h1(class='text-center') Create new user

    form(action='/users/create', method='POST', class='d-flex justify-content-center')
        .mb-3
            label.form-label(for='nickname') Nickname
            input#nickname.form-control(type='text' required name='nickname')
        .mb-3
            label.form-label(for='fullname') Full name
            input#fullname.form-control(type='text' required name='fullname')
            button(class='btn btn-primary ml-2 btn-sm') Create
    a(href='/users/list' class="d-flex justify-content-center")
        button(class='btn btn-secondary ml-2 btn-sm') Back
